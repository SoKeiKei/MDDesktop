{
  "name": "md",
  "type": "module",
  "version": "1.1.2",
  "description": "基于 doocs/md 二次开发的桌面版微信 Markdown 编辑器",
  "author": {
    "name": "KeiKo",
    "email": "sogei@vip.qq.com"
  },
  "private": false,
  "scripts": {
    "electron:dev": "cross-env NODE_ENV=development concurrently \"vite\" \"wait-on tcp:5173 && npm run electron:dev:compile\"",
    "electron:dev:compile": "rimraf electron/dist && tsc -p electron/tsconfig.json && node scripts/rename-electron-files.js && electron electron/dist/main.cjs",
    "electron:build": "vue-tsc --noEmit && vite build && npm run electron:build:compile",
    "electron:build:compile": "rimraf electron/dist && tsc -p electron/tsconfig.json && node scripts/rename-electron-files.js",
    "electron:package": "npm run electron:build && electron-builder",
    "electron:build:win": "npm run electron:build && electron-builder --win",
    "electron:build:mac": "npm run electron:build && electron-builder --mac",
    "electron:build:linux": "npm run electron:build && electron-builder --linux"
  },
  "dependencies": {
    "@phosphor-icons/vue": "^2.2.1",
    "@vee-validate/yup": "^4.15.0",
    "@vueuse/core": "^12.5.0",
    "axios": "^1.7.9",
    "buffer-from": "^1.1.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "codemirror": "^5.65.17",
    "crypto-js": "^4.2.0",
    "csstype": "^3.1.3",
    "dompurify": "^3.2.4",
    "es-toolkit": "^1.27.0",
    "form-data": "4.0.1",
    "front-matter": "^4.0.2",
    "highlight.js": "^11.11.1",
    "juice": "^11.0.0",
    "lucide-vue-next": "^0.473.0",
    "marked": "^15.0.6",
    "mermaid": "^11.4.1",
    "node-fetch": "^3.3.2",
    "pinia": "^2.3.1",
    "radix-vue": "^1.9.12",
    "reading-time": "^1.5.0",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7",
    "uuid": "^11.0.5",
    "vee-validate": "^4.15.0",
    "vue": "^3.5.13",
    "vue-pick-colors": "^1.8.0",
    "vue-sonner": "^1.3.0",
    "yup": "^1.6.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "3.11.0",
    "@types/buffer-from": "^1.1.3",
    "@types/codemirror": "^5.60.15",
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^22.10.7",
    "@types/uuid": "^10.0.0",
    "@unocss/eslint-plugin": "^0.64.1",
    "@vitejs/plugin-vue": "^5.2.1",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^29.4.6",
    "electron-builder": "^24.13.3",
    "eslint": "^9.15.0",
    "eslint-plugin-format": "^0.1.2",
    "less": "^4.2.2",
    "memfs": "^4.7.7",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.1",
    "prettier": "3.3.3",
    "rimraf": "^5.0.10",
    "rollup-plugin-visualizer": "^5.12.0",
    "shx": "^0.3.4",
    "simple-git-hooks": "^2.11.1",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.6.2",
    "unocss": "^0.64.1",
    "unplugin-auto-import": "^0.18.6",
    "unplugin-vue-components": "^0.27.5",
    "vite": "^5.4.14",
    "vite-plugin-node-polyfills": "^0.23.0",
    "vite-plugin-vue-devtools": "^7.6.5",
    "vue-tsc": "^2.2.0",
    "wait-on": "^7.2.0",
    "terser": "^5.29.2"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*": "npm run lint"
  },
  "build": {
    "appId": "com.doocs.md",
    "productName": "MD Desktop",
    "buildVersion": "1.1.2",
    "asar": true,
    "compression": "maximum",
    "removePackageScripts": true,
    "removePackageKeywords": true,
    "icon": "resources/icons/icon.ico",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/dist/**/*",
      "!node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!node_modules/*.d.ts",
      "!node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "extraMetadata": {
      "main": "./electron/dist/main.cjs"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "resources/icons/icon.icns"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "resources/icons/icon.png"
    }
  }
}
